{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react", "import"
    ],
    "rules": {
        "indent": ["error", 4, { "MemberExpression": "off", "SwitchCase": 1}],
        "semi": ["warn","never"],
        "react/jsx-indent-props": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "max-len": ["off"],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
